---
const { frontmatter } = Astro.props;
import Layout from "./Layout.astro";
---

<Layout title={frontmatter.title}>
    <slot />
</Layout>

<style is:global>
    blockquote {
        border-left: 3px solid #ccc;
        margin: 1.5em 10px;
        padding: 0.5em 10px;
    }
    blockquote p {
        display: inline-block;
    }
    table {
        border-collapse: collapse;
        border: #ccc 1px solid;
        padding: 0.5em 10px;
    }
    th,
    td {
        border: #ccc 1px solid;
        padding: 0.5em 10px;
        text-align: left;
    }
    th:empty {
        display:none;
    }
    th {
        background-color: #f2f2f266;
    }
    summary {
        cursor: pointer;
        padding: 0.5em 10px;
        background-color: #00000011;
        width: max-content;
        margin-top: 1rem;
        border-radius: 0.5rem;
        max-width: 100%;
    }
</style>
